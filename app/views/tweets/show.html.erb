<p class="notice"><%= notice %></p>

<div class="tweet-container">
  <%= render @tweet %>
</div>

<div class="actions">
  <%= link_to "Edit this Tweet", edit_tweet_path(@tweet), class: "btn-edit" %>
  <%= link_to "Back to Tweets", tweets_path, class: "btn-back" %>
  <%= button_to "Delete this Tweet", @tweet, method: :delete, class: "btn-delete" %>
</div>
